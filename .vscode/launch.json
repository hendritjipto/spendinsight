{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Current File",
            "skipFiles": ["<node_internals>/**"],
            "program": "${file}",
            "runtimeExecutable": "/opt/homebrew/bin/node",  // Specify the full path to your Node.js binary
            "console": "integratedTerminal"
        }
    ]
}